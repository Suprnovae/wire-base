# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /transactions               controllers.Transactions.index(code:String ?= "", secret:String ?= "", page:Int ?= 0, items:Int ?= 100)
POST    /transactions               controllers.Transactions.add
GET     /transactions/:id           controllers.Transactions.getItem(id: String)

POST    /withdrawals                controllers.Withdrawals.add

GET     /cashpoints                 controllers.CashPoints.index
POST    /cashpoints                 controllers.CashPoints.add
GET     /cashpoints/:id             controllers.CashPoints.getItem(id: String)
GET     /cashpoints/:id/overview    controllers.CashPoints.history(id: String)
PUT     /cashpoints/:id             controllers.CashPoints.modify(id: String, active: Boolean ?= false)

POST    /signup                     controllers.Users.add
GET     /profile                    controllers.Users.index
