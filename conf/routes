# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /transactions               controllers.Transactions.index(page:Int ?= 0, items:Int ?= 100)
POST    /transactions               controllers.Transactions.add
GET     /transactions/:id           controllers.Transactions.getItem(id: String)
PUT     /transactions/:id           controllers.Transactions.withdraw(id: String, code: String ?= "", secret: String ?= "")
